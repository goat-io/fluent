{
  "name": "@goatlab/node-cli",
  "version": "0.8.2",
  "description": "Node Helpers to Build CLI",
  "homepage": "https://docs.goatlab.io",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "prestart": "rimraf dist",
    "predev": "rimraf dist",
    "test": "echo 'skip'",
    "dev": "tsc --watch",
    "lint": "eslint src --fix",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "update:packages": "npm-check-updates -u && yarn",
    "serve": "tsc -w",
    "build": "tsc"
  },
  "keywords": [
    "typescript",
    "TS"
  ],
  "author": "ignacio.cabrera@goatlab.io",
  "license": "MIT",
  "dependencies": {
    "cli-progress": "^3.11.2",
    "colors": "^1.4.0",
    "commander": "^9.4.0",
    "figlet": "^1.5.2",
    "fs": "^0.0.1-security",
    "inquirer": "^9.1.0",
    "ora": "^6.1.2",
    "path": "^0.12.7",
    "shelljs": "^0.8.5"
  },
  "devDependencies": {
    "@goatlab/tsconfig": "workspace:*",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.23",
    "dotenv-cli": "^5.1.0",
    "eslint": "^8.5.0",
    "jest": "catalog:",
    "jest-environment-node": "^27.5.1",
    "prettier": "^2.6.1",
    "pretty-quick": "^3.1.3",
    "ts-jest": "catalog:",
    "ts-node": "catalog:",
    "turbo": "^1.1.10",
    "typescript": "^4.6.3"
  },
  "engines": {
    "node": ">=14.16.0"
  }
}
